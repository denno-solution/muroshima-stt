# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Google Cloud (Chirp)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Amazon Transcribe
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# Azure Speech
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=your-region

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
# 既定の言語コード（未指定時に適用）。例: ja / en / zh など
ELEVENLABS_LANGUAGE_CODE=ja
# 使用するSTTモデルID（例: scribe_v1 / scribe_v1_experimental）
ELEVENLABS_MODEL_ID=scribe_v1
# 非音声イベントのタグ付け（laughter, applause など）を含めるか
ELEVENLABS_TAG_AUDIO_EVENTS=false

# Google Generative AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key
# または
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# Database
DATABASE_URL=sqlite:///./audio_transcriptions.db
# Turso(libSQL) の例
# DATABASE_URL=sqlite+libsql://your-db-your-org.turso.io?secure=true&authToken=your-turso-token

# RAG / Embeddings
# ENABLE_RAG=true
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_DIM=1536
# RAG_COMPLETION_MODEL=gpt-4o-mini
# RAG_CONTEXT_MAX_CHUNKS=12       # 回答プロンプトに入れる最大チャンク数
# RAG_CONTEXT_MAX_CHARS=20000      # 回答プロンプトに入れる総文字数上限（安全策）
# RAG_RETRIEVAL_K=100              # 検索候補として取得する上位件数（UI非表示、全データから選出）
# ハイブリッド検索（FTS×ベクトル）
# ENABLE_FTS=true
# RAG_HYBRID_ALPHA=0.6           # 1.0=ベクトルのみ / 0.0=FTSのみ
# RAG_HYBRID_CAND_MULT=3         # 統合前の候補母集団倍率

# （Supabase Storage 連携は廃止しました）

# Basic認証（オプション）
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=your-secure-password

# === Microphone recording: local & Cloudflare R2 ===
# ローカル保存（既定: 有効）
SAVE_MIC_AUDIO_LOCAL=true
# 保存先ディレクトリ（相対パス可）
MIC_AUDIO_SAVE_DIR=data/recordings

# R2 にも保存（既定: 無効）
SAVE_MIC_AUDIO_TO_R2=false
# R2 設定（S3互換APIを使用）
# 参考: https://developers.cloudflare.com/r2/
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
# オブジェクトのキー接頭辞（任意、例: recordings/）
R2_PREFIX=recordings/
# 公開URLのベース（任意。例: https://pub-xxxxxx.r2.dev/my-bucket または https://media.example.com）
R2_PUBLIC_BASE_URL=
