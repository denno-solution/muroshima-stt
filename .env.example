# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Google Cloud (Chirp)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Amazon Transcribe
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# Azure Speech
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=your-region

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
# 既定の言語コード（未指定時に適用）。例: ja / en / zh など
ELEVENLABS_LANGUAGE_CODE=ja
# 使用するSTTモデルID（例: scribe_v1 / scribe_v1_experimental）
ELEVENLABS_MODEL_ID=scribe_v1
# 非音声イベントのタグ付け（laughter, applause など）を含めるか
ELEVENLABS_TAG_AUDIO_EVENTS=false

# Google Generative AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key
# または
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# Database
DATABASE_URL=sqlite:///./audio_transcriptions.db
# Turso(libSQL) の例
# DATABASE_URL=sqlite+libsql://your-db-your-org.turso.io?secure=true&authToken=your-turso-token

# RAG / Embeddings
# ENABLE_RAG=true
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_DIM=1536
# RAG_COMPLETION_MODEL=gpt-4o-mini
# ハイブリッド検索（FTS×ベクトル）
# ENABLE_FTS=true
# RAG_HYBRID_ALPHA=0.6           # 1.0=ベクトルのみ / 0.0=FTSのみ
# RAG_HYBRID_CAND_MULT=3         # 統合前の候補母集団倍率

# Supabase Storage（録音音声の保存先）
# プロジェクトURL（例: https://xxxx.supabase.co）
SUPABASE_URL=your-supabase-url
# どちらか一方を設定（優先順位: SERVICE_ROLE_KEY > ANON_KEY）
# 公開バケット＋アップロードのみなら ANON_KEY で可。アプリサーバーのみで扱うなら SERVICE_ROLE_KEY 推奨。
SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# 音声保存用バケット名（例: stt-audio）
SUPABASE_STORAGE_BUCKET=stt-audio

# Basic認証（オプション）
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=your-secure-password
